{
  "name": "wb-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram-бот для получения данных с WB и Ozon с чистой архитектурой",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec ts-node src/main.ts",
    "dev:debug": "nodemon --watch src --ext ts,js --exec ts-node --inspect src/main.ts",
    "start": "ts-node src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/main.js"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0",
    "node-telegram-bot-api": "^0.61.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.12",
    "@types/node-telegram-bot-api": "^0.64.9",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5"
  }
}
