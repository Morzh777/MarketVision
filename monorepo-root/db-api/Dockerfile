FROM node:20-alpine

WORKDIR /app

# –ö–æ–ø–∏—Ä—É–µ–º —Ñ–∞–π–ª—ã –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π (–¥–ª—è –ª—É—á—à–µ–≥–æ –∫—ç—à–∏—Ä–æ–≤–∞–Ω–∏—è)
COPY package*.json ./

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ (–∫—ç—à–∏—Ä—É–µ—Ç—Å—è –æ—Ç–¥–µ–ª—å–Ω–æ)
RUN npm ci --only=production
RUN apk add --no-cache curl

# –ö–æ–ø–∏—Ä—É–µ–º –≤—Å–µ —Ñ–∞–π–ª—ã
COPY . .

# –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º Prisma –∫–ª–∏–µ–Ω—Ç (–ø–æ—Å–ª–µ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è —Å—Ö–µ–º—ã)
RUN npx prisma generate

# –°–æ–±–∏—Ä–∞–µ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ (–∫—ç—à–∏—Ä—É–µ—Ç—Å—è –æ—Ç–¥–µ–ª—å–Ω–æ)
RUN npm run build

# –°–æ–∑–¥–∞–µ–º —Å–∫—Ä–∏–ø—Ç –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö
RUN echo '#!/bin/sh' > /usr/local/bin/init-db.sh && \
    echo 'echo "üóÑÔ∏è –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö..."' >> /usr/local/bin/init-db.sh && \
    echo 'until npx prisma db push --accept-data-loss; do' >> /usr/local/bin/init-db.sh && \
    echo '  echo "‚è≥ –ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞, –ø–æ–≤—Ç–æ—Ä–Ω–∞—è –ø–æ–ø—ã—Ç–∫–∞ —á–µ—Ä–µ–∑ 5 —Å–µ–∫—É–Ω–¥..."' >> /usr/local/bin/init-db.sh && \
    echo '  sleep 5' >> /usr/local/bin/init-db.sh && \
    echo 'done' >> /usr/local/bin/init-db.sh && \
    echo 'echo "‚úÖ –ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω–∞ —É—Å–ø–µ—à–Ω–æ!"' >> /usr/local/bin/init-db.sh && \
    echo 'echo "üë§ –°–æ–∑–¥–∞–Ω–∏–µ –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä–∞..."' >> /usr/local/bin/init-db.sh && \
    echo 'node -e "const { PrismaClient } = require(\"@prisma/client\"); const bcrypt = require(\"bcryptjs\"); (async () => { const prisma = new PrismaClient(); try { const existing = await prisma.user.findUnique({ where: { username: \"pavlishev\" } }); if (!existing) { const hash = bcrypt.hashSync(\"171989Bkmz\", 10); await prisma.user.create({ data: { username: \"pavlishev\", password: hash, role: \"admin\" } }); console.log(\"‚úÖ –ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä —Å–æ–∑–¥–∞–Ω\"); } else { console.log(\"‚úÖ –ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç\"); } } catch (e) { console.error(\"‚ùå –û—à–∏–±–∫–∞:\", e.message); } finally { await prisma.\$disconnect(); } })()"' >> /usr/local/bin/init-db.sh && \
    echo 'echo "üöÄ –ó–∞–ø—É—Å–∫ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è..."' >> /usr/local/bin/init-db.sh && \
    echo 'exec "$@"' >> /usr/local/bin/init-db.sh && \
    chmod +x /usr/local/bin/init-db.sh

# –û—Ç–∫—Ä—ã–≤–∞–µ–º –ø–æ—Ä—Ç—ã
EXPOSE 3003 50051

# –ó–∞–ø—É—Å–∫–∞–µ–º –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—é –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö –∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
CMD ["/usr/local/bin/init-db.sh", "npm", "run", "start:prod"] 